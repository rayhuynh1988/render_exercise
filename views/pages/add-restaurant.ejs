<body>
    <main class="container">
        <%- include('../partials/navbar'); %>

        <div class="form-container">
            <h1>Add a New Restaurant</h1>
            <form action="/add-restaurant" method="POST">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" placeholder="Restaurant Name" required>

                <label for="cuisine">Cuisine:</label>
                <input type="text" id="cuisine" name="cuisine" placeholder="e.g., Italian" required>

                <label for="price">Price Range:</label>
                <input type="text" id="price" name="price" placeholder="e.g., $20-$50" required>

                <label for="location">Location:</label>
                <input type="text" id="location" name="location" placeholder="e.g., Chinatown" required>

                <label for="rating">Rating:</label>
                <input type="number" id="rating" name="rating" min="1" max="5" step="0.1" required>

                <label for="diet">Dietary Option:</label>
                <input type="text" id="diet" name="diet" placeholder="e.g., Vegan Friendly" required>

                <button type="submit" class="button primary">Add Restaurant</button>
            </form>
        </div>
    </main>
</body>
