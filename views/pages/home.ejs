<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"/>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* General Styling */
        body {
            background: linear-gradient(to right, #f8f9fa, #e9ecef);
        }

        h1, h2 {
            color: black;
            text-shadow: none;
        }

        .post-container {
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .filter-title {
            text-align: center;
            font-weight: bold;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        .button-container button {
            flex: 1;
            padding: 0.5rem;
            border-radius: 5px;
        }

        .happy-btn {
            background-color: green;
            color: white;
        }

        .happy-btn:hover {
            background-color: #228b22;
        }

        .unhappy-btn {
            background-color: red;
            color: white;
        }

        .unhappy-btn:hover {
            background-color: #8b0000;
        }

        .remove-btn {
            background-color: #ffc107;
            color: black;
            border: none;
        }

        .remove-btn:hover {
            background-color: #e0a800;
        }
    </style>
</head>
<body>
    <main class="container">
        <!-- Navbar -->
        <%- include('../partials/navbar'); %>

        <!-- Welcome Section -->
        <div class="welcome-container">
            <h2>Discover, Dine, and Rate!</h2>
        </div>
        <div class="about-container">
            <img src="/images/chinese_dinner.jpg" alt="Picture of a delicious dinner" style="width: 400px; height: auto;">
        </div>

        <!-- Filter Section -->
        <div class="filter-container">
            <div class="filter-title">What are you craving?</div>
            <input type="text" id="filter-search" placeholder="Search by cuisine, location, diet, price, or rating">
        </div>

        <!-- Title After Filter -->
        <div class="about-container">
            <h2>Dinner Suggestions</h2>
        </div>

        <!-- Restaurant Data -->
        <div id="restaurant-list">
            <% blogs.forEach(restaurant => { %>
                <article class="post-container" 
                         data-cuisine="<%= restaurant.cuisine.toLowerCase() %>" 
                         data-location="<%= restaurant.location.toLowerCase() %>" 
                         data-diet="<%= restaurant.diet.toLowerCase() %>" 
                         data-rating="<%= restaurant.rating %>" 
                         data-price="<%= restaurant.price %>"
                         data-happy-visits="0"
                         data-unhappy-visits="0"
                         id="restaurant-<%= restaurant.id %>">
                    <h3><%= restaurant.name %></h3>
                    <p><strong>Cuisine:</strong> <%= restaurant.cuisine %></p>
                    <p><strong>Price Range:</strong> <%= restaurant.price %></p>
                    <p><strong>Location:</strong> <%= restaurant.location %></p>
                    <p><strong>Rating:</strong> <%= restaurant.rating %> / 5</p>
                    <p><strong>Dietary Option:</strong> <%= restaurant.diet %></p>
                    <p><strong>Happy Visits:</strong> <span class="happy-visit-count">0</span></p>
                    <p><strong>Unhappy Visits:</strong> <span class="unhappy-visit-count">0</span></p>
                    <div class="button-container">
                        <button class="happy-btn">Happy Visit</button>
                        <button class="unhappy-btn">Unhappy Visit</button>
                        <form action="/delete/<%= restaurant.id %>" method="post" onsubmit="return confirm('Do you really want to remove this suggestion?');">
                            <button class="remove-btn" type="submit">Remove Suggestion</button>
                        </form>
                    </div>
                </article>
            <% }); %>
        </div>
    </main>

    <!-- JavaScript for Filtering and Ranking -->
    <script>
        const filterSearch = document.getElementById('filter-search');
        const restaurantList = document.getElementById('restaurant-list');
        const restaurants = Array.from(restaurantList.querySelectorAll('.post-container'));

        function filterRestaurants() {
            const searchValue = filterSearch.value.toLowerCase();
            const inputValueAsNumber = parseFloat(searchValue);

            restaurants.forEach(restaurant => {
                const matchesCuisine = restaurant.dataset.cuisine.includes(searchValue);
                const matchesLocation = restaurant.dataset.location.includes(searchValue);
                const matchesDiet = restaurant.dataset.diet.includes(searchValue);

                const price = parseFloat(restaurant.dataset.price || "0");
                const rating = parseFloat(restaurant.dataset.rating || "0");

                const matchesPrice = !isNaN(inputValueAsNumber) && inputValueAsNumber >= price;
                const matchesRating = !isNaN(inputValueAsNumber) && inputValueAsNumber >= rating;

                if (matchesCuisine || matchesLocation || matchesDiet || matchesPrice || matchesRating) {
                    restaurant.style.display = '';
                } else {
                    restaurant.style.display = 'none';
                }
            });
        }

        filterSearch.addEventListener('input', filterRestaurants);
    </script>
</body>
</html>