<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"/>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* General Styling */
        body {
            background: linear-gradient(to right, #f8f9fa, #e9ecef);
        }

        h1, h2 {
            color: black; /* Plain black font */
            text-shadow: none; /* Removed fuzzy effects */
        }

        .post-container {
            background: rgba(255, 255, 255, 0.9); /* Transparent white for readability */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        .button-container button {
            flex: 1; /* Ensure equal button width */
            padding: 0.5rem;
            border-radius: 5px;
        }

        .happy-btn {
            background-color: green;
            color: white;
        }

        .happy-btn:hover {
            background-color: #228b22; /* Darker green */
        }

        .unhappy-btn {
            background-color: red;
            color: white;
        }

        .unhappy-btn:hover {
            background-color: #8b0000; /* Darker red */
        }

        .remove-btn {
            background-color: #ffc107; /* Yellow */
            color: black;
            border: none;
        }

        .remove-btn:hover {
            background-color: #e0a800;
        }
    </style>
</head>
<body>
    <main class="container">
        <!-- Navbar -->
        <%- include('../partials/navbar'); %>

        <!-- Welcome Section -->
        <div class="welcome-container">
            <h1>Dinner How?</h1>
            <h2>Discover, Dine, and Decide: Our Journey Through Culinary Adventures!</h2>
        </div>
        <div class="about-container">
            <img src="/images/chinese_dinner.jpg" alt="Picture of a delicious dinner">
            <br>
        </div>

        <!-- Filter Section -->
        <div class="filter-container">
            <label for="filter-cuisine">Cuisine:</label>
            <input type="text" id="filter-cuisine" placeholder="e.g. French, Chinese, Japanese...">
            
            <label for="filter-location">Location:</label>
            <input type="text" id="filter-location" placeholder="e.g., Chinatown, Telok Ayer, Marina Bay Sands...">
        </div>

        <!-- Restaurant Data -->
        <div id="restaurant-list">
            <% blogs.forEach(restaurant => { %>
                <article class="post-container" 
                         data-cuisine="<%= restaurant.cuisine.toLowerCase() %>" 
                         data-location="<%= restaurant.location.toLowerCase() %>" 
                         data-rating="<%= restaurant.rating %>" 
                         data-happy-visits="0"
                         data-unhappy-visits="0"
                         id="restaurant-<%= restaurant.id %>">
                    <h3><%= restaurant.name %></h3>
                    <p><strong>Cuisine:</strong> <%= restaurant.cuisine %></p>
                    <p><strong>Price Range:</strong> <%= restaurant.price %></p>
                    <p><strong>Location:</strong> <%= restaurant.location %></p>
                    <p><strong>Rating:</strong> <%= restaurant.rating %> / 5</p>
                    <p><strong>Dietary Option:</strong> <%= restaurant.diet %></p>
                    <p><strong>Happy Visits:</strong> <span class="happy-visit-count">0</span></p>
                    <p><strong>Unhappy Visits:</strong> <span class="unhappy-visit-count">0</span></p>
                    <div class="button-container">
                        <button class="happy-btn">Happy Visit</button>
                        <button class="unhappy-btn">Unhappy Visit</button>
                        <form action="/delete/<%= restaurant.id %>" method="post" onsubmit="return confirm('Do you really want to remove this suggestion?');">
                            <button class="remove-btn" type="submit">Remove Suggestion</button>
                        </form>
                    </div>
                </article>
            <% }); %>
        </div>
    </main>

    <!-- JavaScript for Filtering and Ranking -->
    <script>
        const cuisineFilter = document.getElementById('filter-cuisine');
        const locationFilter = document.getElementById('filter-location');
        const ratingFilter = document.getElementById('filter-rating');
        const restaurantList = document.getElementById('restaurant-list');
        const restaurants = Array.from(restaurantList.querySelectorAll('.post-container'));

        function filterRestaurants() {
            const cuisineValue = cuisineFilter.value.toLowerCase();
            const locationValue = locationFilter.value.toLowerCase();
            const ratingValue = parseFloat(ratingFilter.value) || 0;

            restaurants.forEach(restaurant => {
                const matchesCuisine = restaurant.dataset.cuisine.includes(cuisineValue);
                const matchesLocation = restaurant.dataset.location.includes(locationValue);
                const matchesRating = parseFloat(restaurant.dataset.rating) >= ratingValue;

                if (matchesCuisine && matchesLocation && matchesRating) {
                    restaurant.style.display = '';
                } else {
                    restaurant.style.display = 'none';
                }
            });
        }

        function sortRestaurants() {
            restaurants.sort((a, b) => {
                const unhappyA = parseInt(a.dataset.unhappyVisits);
                const unhappyB = parseInt(b.dataset.unhappyVisits);
                const happyA = parseInt(a.dataset.happyVisits);
                const happyB = parseInt(b.dataset.happyVisits);
                const ratingA = parseFloat(a.dataset.rating);
                const ratingB = parseFloat(b.dataset.rating);

                if (unhappyA !== unhappyB) {
                    return unhappyA - unhappyB; // Rank by lowest unhappy visits
                }
                if (happyB !== happyA) {
                    return happyB - happyA; // Rank by highest happy visits
                }
                return ratingB - ratingA; // Rank by rating as a tiebreaker
            });

            restaurants.forEach(restaurant => {
                restaurantList.appendChild(restaurant); // Reorder the DOM elements
            });
        }

        document.querySelectorAll('.happy-btn').forEach(button => {
            button.addEventListener('click', function () {
                const restaurant = button.closest('.post-container');
                const happyVisitCountElem = restaurant.querySelector('.happy-visit-count');
                let happyVisitCount = parseInt(restaurant.dataset.happyVisits) || 0;

                happyVisitCount += 1; // Increment happy visits
                restaurant.dataset.happyVisits = happyVisitCount;
                happyVisitCountElem.textContent = happyVisitCount;

                sortRestaurants(); // Re-sort restaurants after updating happy visits
            });
        });

        document.querySelectorAll('.unhappy-btn').forEach(button => {
            button.addEventListener('click', function () {
                const restaurant = button.closest('.post-container');
                const unhappyVisitCountElem = restaurant.querySelector('.unhappy-visit-count');
                let unhappyVisitCount = parseInt(restaurant.dataset.unhappyVisits) || 0;

                unhappyVisitCount += 1; // Increment unhappy visits
                restaurant.dataset.unhappyVisits = unhappyVisitCount;
                unhappyVisitCountElem.textContent = unhappyVisitCount;

                sortRestaurants(); // Re-sort restaurants after updating unhappy visits
            });
        });

        cuisineFilter.addEventListener('input', filterRestaurants);
        locationFilter.addEventListener('input', filterRestaurants);
        ratingFilter.addEventListener('input', filterRestaurants);
    </script>
</body>
</html>
